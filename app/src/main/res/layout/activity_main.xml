<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.example.dreamer.etelbarclient.MainActivity"
    android:background="@color/colorBackground">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="Válassz asztalt"
        android:textAlignment="center"
        android:textSize="32dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:onClick="table1_Click"
            android:scaleType="fitCenter"
            android:src="@drawable/table_grey" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignTop="@+id/textView9"
            android:text="9. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton8"
            android:layout_centerHorizontal="true"
            android:text="8. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton8"
            android:layout_alignParentStart="true"
            android:text="7. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageButton12"
            android:layout_alignStart="@+id/imageButton2"
            android:text="6. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageButton12"
            android:layout_centerHorizontal="true"
            android:text="5. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton12"
            android:layout_alignParentStart="true"
            android:text="4. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="3. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:text="2. asztal"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentStart="true"
            android:text="1. asztal"
            android:textAlignment="center" />

    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_button"
        android:onClick="jumpNext"
        android:text="Foglalás"
        android:layout_margin="4dp"
        android:textColor="@color/colorBackground"
        android:elevation="16dp"/>

</RelativeLayout>
